<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".Activities.AcercaDe">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_below="@id/toolbar"
        android:paddingTop="@dimen/margin_top_circularview">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:paddingTop="@dimen/margin_top_circularview"
            android:layout_width="@dimen/arenaSize"
            android:layout_height="@dimen/arenaSize"

            android:id="@+id/arenalogo"
            android:src="@drawable/gricardov"


            android:layout_centerHorizontal="true" />
        <TextView
            android:paddingTop="@dimen/margin_top_circularview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sobremi"
            android:gravity="center"
            android:layout_below="@+id/arenalogo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            />
    </RelativeLayout>
</RelativeLayout>
